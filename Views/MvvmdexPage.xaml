<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Mvvmdex.Views.MvvmdexPage"
             Title="Mvvmdex">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <SearchBar Grid.Row="0"  />


    <StackLayout IsVisible="{Binding HasCoincidence}" Grid.Row="1" Padding="20" Spacing="10">
      <Label Text="{Binding PokemonName}" FontSize="Large" />
      <Label Text="{Binding Desription}"  />
      <Label Text="{Binding Shape}"  />
    </StackLayout>

    <Label IsVisible="False" Text="😕" Grid.Row="1" HorizontalTextAlignment="Center" FontSize="100" />


  </Grid>
</ContentPage>
